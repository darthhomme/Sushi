<h3>Welcome, <%=@server%></h3>

<ul>
<%= form_for @order do |sushi| %>
<li>
  <%= sushi.label :order_id %>
  <%= sushi.text_field :order_id %>
  <%= sushi.label :name %>
  <%= sushi.text_field :name %>
  <%= sushi.label :description %>
  <%= sushi.text_field :description %>
  <%= sushi.label :price %>
  <%= sushi.text_field :price %>
  <%= sushi.submit %>
</li>
<% end %>
</ul>
<ul>
  <% @orders.each do |order| %>
    <li>#<%= order.order_id %></li>
    <li>$<%= order.name %></li>
    <li><%= order.description %></li>
    <li>$<%= order.price %></li>
    <li><%= button_to "Remove", order_path(order), method: :delete%></li>
  <% end %>
</ul>
<ul class='group'>
  <% totalPrice = 0 %>
  <% @orders.each do |fish| %>
    <% totalPrice += fish.price.to_i %>
    <% end %>
    <li>Total Check: <div id="total-price"><%=(totalPrice) %></div></li>

    <li>Tip:<%=(totalPrice * 0.15) %></li>
    <li>Tip:<%=(totalPrice * 0.2) %></li>
    <li>Tip:<%=(totalPrice * 0.25) %></li>
