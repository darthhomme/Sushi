<h3>Welcome, Server</h3>

<ul>
<%= form_for @order do |sushi| %>
<li>
  <%= sushi.label :order_id %>
  <%= sushi.text_field :order_id %>
  <%= sushi.label :description %>
  <%= sushi.text_field :description %>
  <%= sushi.label :price %>
  <%= sushi.text_field :price %>
  <%= sushi.label :tax %>
  <%= sushi.text_field :tax %>
  <%= sushi.label :total %>
  <%= sushi.text_field :total %>
  <%= sushi.submit %>
</li>
<% end %>
</ul>
<ul class='order'>
  <% @orders.each do |order| %>
    <li>
      #<%= order.order_id %> - <%= order.description %>, $<%= order.price %>, $<%= order.tax %>, $<%= order.total %> <%= button_to "Remove", order_path(order), method: :delete%>
    </li>
  <% end %>
</ul>
